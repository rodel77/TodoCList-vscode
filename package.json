{
	"name": "todoclist-vscode",
	"displayName": "TodoCList",
	"description": "A simple todo list for real developers",
	"repository": {
		"url": "https://github.com/rodel77/TodoCList-vscode"
	},
	"version": "0.0.1",
	"publisher": "Rodel",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "todoclist.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "todoclist.complete",
				"title": "Complete",
				"icon": "$(check)"
			},
			{
				"command": "todoclist.add",
				"title": "Add",
				"icon": "$(add)"
			},
			{
				"command": "todoclist.delete",
				"title": "Delete",
				"icon": "$(trashcan)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "todoclist",
					"title": "TodoCList",
					"icon": "$(checklist)"
				}
			]
		},
		"views": {
			"todoclist": [
				{
					"id": "todoclist",
					"name": "TodoCList"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "todoclist.refresh",
					"when": "view == todoclist",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "todoclist.add",
					"when": "view == todoclist && viewItem == project",
					"group": "inline"
				},
				{
					"command": "todoclist.complete",
					"when": "view == todoclist && viewItem == task",
					"group": "inline"
				},
				{
					"command": "todoclist.delete",
					"when": "view == todoclist && viewItem == task",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
